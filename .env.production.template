# MPC钱包系统生产环境配置模板
# 请复制此文件为 .env.production 并填写实际参数

# ===========================================
# 应用基本信息
# ===========================================
APP_NAME=MPC钱包系统
APP_VERSION=1.0.0
APP_ENV=production

# ===========================================
# Facebook认证配置
# ===========================================
# 请前往 https://developers.facebook.com/ 创建应用
FACEBOOK_APP_ID=YOUR_FACEBOOK_APP_ID_HERE
FACEBOOK_APP_SECRET=YOUR_FACEBOOK_APP_SECRET_HERE
FACEBOOK_REDIRECT_URI=https://yourdomain.com/api/v1/auth/facebook/callback

# ===========================================
# 区块链RPC节点配置
# ===========================================
# 推荐使用Infura服务：https://infura.io/
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
ARBITRUM_RPC_URL=https://arbitrum-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
OPTIMISM_RPC_URL=https://optimism-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
BSC_RPC_URL=https://bsc-dataseed.binance.org

# 测试网配置（可选）
ETHEREUM_TESTNET_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_PROJECT_ID
POLYGON_TESTNET_RPC_URL=https://polygon-mumbai.infura.io/v3/YOUR_INFURA_PROJECT_ID

# ===========================================
# 数据库配置
# ===========================================
# 生产环境推荐使用云数据库服务
DB_HOST=your-production-db-host.com
DB_PORT=5432
DB_USER=mpc_user
DB_PASSWORD=secure_production_password_here
DB_NAME=mpc_wallet
DB_SSL_MODE=require

# Redis缓存配置
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password_here
REDIS_DB=0

# ===========================================
# JWT认证配置
# ===========================================
JWT_SECRET=your_very_secure_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# ===========================================
# 服务器配置
# ===========================================
API_PORT=3000
MPC_CORE_PORT=8081
BLOCKCHAIN_MIDDLEWARE_PORT=8082

# ===========================================
# 域名和SSL配置
# ===========================================
DOMAIN=yourdomain.com
SSL_ENABLED=true

# ===========================================
# 监控和日志配置
# ===========================================
LOG_LEVEL=info
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# ===========================================
# 安全配置
# ===========================================
CORS_ALLOWED_ORIGINS=https://yourdomain.com
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ===========================================
# 邮件服务配置（可选）
# ===========================================
SMTP_HOST=smtp.yourmailprovider.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@yourdomain.com