# 区块链中间件生产环境配置
NODE_ENV=production

# 服务器配置
SERVER_ADDRESS=0.0.0.0
SERVER_PORT=8082

# 数据库配置
DB_HOST=postgres
DB_PORT=5432
DB_USER=mpc_user
DB_PASSWORD=secure_production_password
DB_NAME=mpc_wallet
DB_SSL_MODE=require

# 缓存配置
REDIS_URL=redis://redis:6379

# 以太坊RPC配置
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_project_id
ETHEREUM_WS_URL=wss://mainnet.infura.io/ws/v3/your_infura_project_id

# Polygon RPC配置
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your_infura_project_id
POLYGON_WS_URL=wss://polygon-mainnet.infura.io/ws/v3/your_infura_project_id

# BSC RPC配置
BSC_RPC_URL=https://bsc-dataseed.binance.org
BSC_WS_URL=wss://bsc-ws-node.nariox.org:443

# Arbitrum RPC配置
ARBITRUM_RPC_URL=https://arbitrum-mainnet.infura.io/v3/your_infura_project_id
ARBITRUM_WS_URL=wss://arbitrum-mainnet.infura.io/ws/v3/your_infura_project_id

# Optimism RPC配置
OPTIMISM_RPC_URL=https://optimism-mainnet.infura.io/v3/your_infura_project_id
OPTIMISM_WS_URL=wss://optimism-mainnet.infura.io/ws/v3/your_infura_project_id

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json