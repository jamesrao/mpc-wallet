{
  "name": "mpc-wallet",
  "version": "1.0.0",
  "description": "Enterprise-grade Web3 wallet based on Multi-Party Computation (MPC) technology, focused on cross-border e-commerce blockchain supply chain finance platform. Provides secure digital asset management and supply chain finance solutions.",
  "main": "index.js",

  "scripts": {
    "test": "node scripts/automated-test-runner.js",
    "test:unit": "node scripts/lightweight-test-runner.js",
    "test:integration": "node scripts/automated-test-runner.js",
    "test:e2e": "./test_e2e_simple.sh",
    "test:performance": "node scripts/automated-test-runner.js",
    "test:report": "./scripts/run-tests.sh",
    "start:test": "docker-compose -f docker-compose.test.yml up -d",
    "stop:test": "docker-compose -f docker-compose.test.yml down",
    "ci": "npm run test:unit && npm run test:integration && npm run test:performance"
  },
  "keywords": ["mpc", "wallet", "blockchain", "web3", "cryptography"],
  "author": "MPC Wallet Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "mocha": "^10.2.0",
    "chai": "^4.3.10",
    "nyc": "^15.1.0",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}